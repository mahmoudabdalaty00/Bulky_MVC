@page
@model Bulky_WebRazor.Pages.Catagories.IndexModel
@{
}


<h1>Category Page </h1>

    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> 
                    Catagory List
                </h2>
            </div>
            <div class="col-6 text-end mb-4 border-3">
            <a asp-page="/Catagories/create" class="btn btn-success">
                <i class="bi bi-plus-circle "></i>  Create New Category
               </a>
            </div>
        </div>
<table class="table table-bordered table-stripe">

    <thead>
        <tr>
        <th>Name</th>
        <th>DisplaOrder</th>
    </tr>
    </thead>

 <tbody>
            @foreach (var cat in Model.CategoriesList.OrderBy(li => li.Id))
            {
        <tr>
        <td>@cat.Name </td>
     
        <td>@cat.DisplayOrder</td>
         
        <td>
            <div class="w-75 btn-group" role="group">
                            <a asp-page="/Catagories/Edit" asp-route-Id="@cat.Id" class="btn btn-primary mx-2">
                       <i class="bi bi-pencil-fill"></i>  Edit
                </a>
                            <a asp-page="/Catagories/Delete" asp-route-Id="@cat.Id" class="btn btn-danger mx-2">
                     <i class="bi bi-trash-fill"></i>    Delete
                </a>
            </div>


        </td>
         </tr>
 }
    </tbody>

	</table>
</div>