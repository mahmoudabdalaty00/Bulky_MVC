@model Category

<form  method="post">

	<div class="border p-3 mt-3">

		<div class="row pb-2">
			<h2 class="text-primary">
				Edit Category
			</h2>
			<hr />


		</div>

		@* 		<div asp-validation-summary="All"></div>
		*@

		<div class="mb-3 row p-1 ">
			<label asp-for="Id" hidden class="p-0"></label>
			<input asp-for="Id" disabled hidden type="number" class="form-control" />

		</div>

		<div class="mb-3 row p-1 ">
			<label asp-for=" Name" class="p-0"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger ">

			</span>
		</div>
		<br />
	
		<br />
		<div class="mb-3 row p-1">
			<label asp-for=" DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" type="text" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger ">

			</span>
		</div>

		<div class="row pb-2">

			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control">
					Update
				</button>

			</div>

			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="form-control   btn btn-outline-secondary">
					Back to list
				</a>
			</div>
		</div>



	</div>
</form>


@section Scripts {

	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
