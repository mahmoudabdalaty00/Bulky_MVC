@using Bulky.Models.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}


    <div class="container">
        <h1 class="mt-5">Book Details</h1>
    <table class="table table-hover table-bordered table-stripe">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Author</th>
                <th scope="col"> List Price</th>
                <th scope="col">ISBN</th>
                <th scope="col">Price for 1-50</th>
                <th scope="col">Price for 50+</th>
                <th scope="col">Price for 100+</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var book in Model )
            {
                <tr class="table-active">
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Author</td>
                <td>@book.ISBM</td>
                <td>@book.ListPrice</td>
                <td>@book.Price</td>
                <td>@book.Price50</td>
                <td>@book.Price100</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-Id="@book.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-fill"></i>  Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@book.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>    Delete
                            </a>
                        </div>


                    </td>
            </tr>
			} 
        </tbody>
</table>
    </div>
