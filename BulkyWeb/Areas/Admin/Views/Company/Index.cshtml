@using Bulky.Models.Models
@model IEnumerable<Company>
 


       <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> 
                    Company List
                </h2>
            </div>
            <div class="col-6 text-end mb-4 border-3">
               <a asp-controller="Company" asp-action="Upsert" class="btn btn-success" >
                <i class="bi bi-plus-circle "></i>  Create New Company
               </a>
            </div>
        </div>
    <table id="tblData" class="table table-hover table-bordered table-stripe" width="100%">
        <thead>
            <tr>
                 
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>


                <th>StreetAddress</th>
				<th>City</th>

				<th scope="col">State</th>	
                <th scope="col">PostalCode</th>
         
              
                <th scope="col"></th>
                <th scope="col"></th>
             
            </tr>
        </thead>
    
</table>
    </div>





@section Scripts {
    <script src="~/js/Company.js"></script>
}
 
